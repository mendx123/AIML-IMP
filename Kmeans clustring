import matplotlib.pyplot as plt
import pandas as pd
import numpy as np
from sklearn.datasets import make_blobs
from sklearn.cluster import KMeans

# create a bigger dataset with 300 samples and 4 features
x, y = make_blobs(n_samples=300, n_features=4, centers=3, cluster_std=1.2, random_state=42)
x = pd.DataFrame(x, columns=['feature1','feature2','feature3','feature4'])
y = pd.Series(y)

# color map for plotting
colors = np.array(['red','lime','black'])

# plot real classification using first two features
plt.figure(figsize=(14,6))
plt.subplot(1,2,1)
plt.scatter(x.feature1, x.feature2, c=colors[y], s=40)
plt.title('Real Classification')

# fit KMeans
kmeans = KMeans(n_clusters=3, random_state=42)
kmeans.fit(x)
clusters = kmeans.labels_

# plot KMeans classification using same two features
plt.subplot(1,2,2)
plt.scatter(x.feature1, x.feature2, c=colors[clusters], s=40)
plt.title('KMeans Classification')

plt.show()
